@model IMS.Models.ViewModels.EditInsuranceRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Insurance</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post" class="row g-3" asp-controller="AdminInsurance" asp-action="Edit">

        <div class="col-md-6">
            <label class="form-label">Insurance Type</label>
            <input type="text" class="form-control" asp-for="InsuranceType" readonly>
        </div>

        <div class="col-md-6">
            <label class="form-label">Subject</label>
            <input type="text" class="form-control" asp-for="Subject" readonly>
        </div>

        <div class="col-md-6">
            <label class="form-label">Valid From</label>
            <input type="date" class="form-control" asp-for="ValidFrom" readonly>
        </div>

        <div class="col-md-6">
            <label class="form-label">Insured Sum</label>
            <input type="number" class="form-control" asp-for="Sum">
        </div>

        <div class="col-md-6">
            <label class="form-label">Valid Until</label>
            <input type="date" class="form-control" asp-for="ValidUntil">
        </div>

        <div class="col-12 mt-4" data="">
            <button type="submit" class="btn btn-dark">Update</button>
            <button type="submit" formaction="@Url.Action("Delete", "AdminInsurance")" formmethod="post" class="btn btn-danger ms-2" onclick="return confirm('Are you sure you want to delete this insurance record?')">
                Delete
            </button>
            <!-- Include all other fields from EditInsuranceRequest here -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InsuranceType" />
            <!-- Include other fields as needed -->
        </div>
    </form>
</div>
