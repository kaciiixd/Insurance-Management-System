@model IMS.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-3">
    <h2>Welcome to IMS</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Insurances</h5>
                    <p class="card-text">@Model.InsuranceCount</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Clients</h5>
                    <p class="card-text">@Model.ClientCount</p>
                </div>
            </div>
        </div>
    </div>
</div>
