@model IMS.Models.ViewModels.EditClientRequest

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Client</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post" asp-action="Edit" asp-controller="AdminClient">
        <input asp-for="Id" readonly/>

        <!-- Display client information -->
        <div class="row">
            <div class="col">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName">
            </div>
            <div class="col">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName">
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Date Of Birth</label>
                <input type="date" class="form-control" asp-for="DateOfBirth">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label class="form-label">Contact Number</label>
                <input type="number" class="form-control" asp-for="ContactNumber">
            </div>
            <div class="col">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Email">
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address">
        </div>

        <div class="col-12 mt-4" data="">
            <button type="submit" class="btn btn-dark">Update</button>
            <button type="submit" formaction="@Url.Action("Delete", "AdminClient")" formmethod="post" class="btn btn-danger ms-2" onclick="return confirm('Are you sure you want to delete this insurance record?')">
                Delete</button>
        </div>
    </form>

</div>